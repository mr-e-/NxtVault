<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout style="@style/row_group" >

                <TextView
                    android:id="@+id/lblAmount"
                    android:layout_weight=".3"
                    android:layout_width="0dp"
                    style="@style/row_header_text"
                    android:text="Amount" />

                <EditText
                    android:imeOptions="actionDone"
                    android:textColorHint="#CCBEBEBE"
                    android:hint="Nxt Amount"
                    android:textColor="@color/primary_dark"
                    android:gravity="center_vertical"
                    android:layout_weight=".7"
                    android:id="@+id/txtAmount"
                    android:inputType="numberDecimal"
                    android:background="@android:color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <View style="@style/row_group_divider" />

            <LinearLayout style="@style/row_group" android:minHeight="50dp" android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/lblMessage"
                    style="@style/row_header_text"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="Message"
                    android:layout_weight=".3"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:textColor="@color/primary_dark"
                    android:id="@+id/txtMessage"
                    android:textColorHint="#CCBEBEBE"
                    android:hint="Attach Message"
                    android:layout_weight=".7"
                    android:background="@android:color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:isScrollContainer="true"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

            <View style="@style/row_group_divider" android:layout_marginTop="15dp" />

        </LinearLayout>
    </ScrollView>

    <com.gc.materialdesign.views.ButtonFloat
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_centerHorizontal="true"
        android:background="@color/primary_dark"
        materialdesign:animate="false" />
</RelativeLayout>


