<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:id="@+id/mainFrame">

    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:id="@+id/mainView"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.nxt.jayclient.SignTxActivity.AccountAccessFragment"
        android:background="@color/primary_light"
        card_view:cardUseCompatPadding="true"
        android:layout_margin="6dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:alpha="1"/>

        <ImageView
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/nxt"
            android:alpha=".1"/>

        <FrameLayout
            android:layout_margin="12dp"
            android:id="@+id/mainFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>
    </android.support.v7.widget.CardView>



    <FrameLayout
        android:id="@+id/popupFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:visibility="gone">

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pin" android:visibility="gone">

    </FrameLayout>
</FrameLayout>
